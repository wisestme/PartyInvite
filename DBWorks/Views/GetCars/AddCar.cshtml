@using System.Web.UI.WebControls
@model DBWorks.Entities.Car
@{
    ViewBag.Title = "AddCar";
}

<h2>Add Car</h2>

<div>
    @using (Html.BeginForm())
    {
        @Html.EditorFor(c => c.Name, new {htmlAttributes = new {PlaceHolder = "Car Name"}})
        @Html.EditorFor(c => c.Make, new {htmlAttributes = new{PlaceHolder = "Car Make"}})
        @Html.EditorFor(c => c.Year, new {htmlAttributes = new {PlaceHolder = "Year"}})
    }
</div>