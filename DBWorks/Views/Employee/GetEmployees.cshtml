@model IEnumerable<DBWorks.Models.Employee>

@{
    ViewBag.Title = "GetEmployees";
}

<h2>GetEmployees</h2>

<ul>
    @foreach (var employee in Model)
    {
        <li>@employee.Name</li>

          if (employee.Salary > 4000000)
          {
            <li>@employee.Name is a bigger boy</li>
          }
    }
</ul>